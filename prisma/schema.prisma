generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String?
  userName  String   @unique
  email     String   @unique
  password  String
  bio       String?
  avatar    String?
  createAt  DateTime @default(now())
  updateAt  DateTime @updatedAt
}

